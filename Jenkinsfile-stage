#!groovy

node('master') {

    currentBuild.result = "SUCCESS"

    try {

       stage('Docker-taging') {
	sh '''
	   docker tag forwater/player:1.10.1-bronze forwater/player:1.10.1-silver
	   '''
	}

       stage('Docker-push') {

          withCredentials([usernamePassword(credentialsId: 'docker-hub-credentials', passwordVariable: 'dockerpassword', usernameVariable:'dockerusername')]) {
           sh '''
               docker login -u $dockerusername -p $dockerpassword
               docker push "forwater/player:1.10.1-silver"
              '''
            }
}

}


    catch (err) {
        currentBuild.result = "FAILURE"
        throw err
    }

}

